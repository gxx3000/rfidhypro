    <sql id="selectMkCustomersVo">
        select customer_id, customer_name, customer_short_name, lead_id, source_type, industry_type, customer_level, cooperation_status, scale_type, region, address, legal_person, registered_capital, establish_date, website, phone, email, tax_no, description, assign_user_id, assign_dept_id, attachment_ids, del_flag, create_by, create_time, update_by, update_time, reserved1, reserved2, reserved3 from mk_customer
    </sql>

    <select id="selectMkCustomersList" parameterType="MkCustomers" resultMap="MkCustomersResult">
        <include refid="selectMkCustomersVo"/>
        <where>  
            <if test="customerName != null  and customerName != ''"> and customer_name like concat('%', #{customerName}, '%')</if>
            <if test="customerShortName != null  and customerShortName != ''"> and customer_short_name like concat('%', #{customerShortName}, '%')</if>
            <if test="leadId != null "> and lead_id = #{leadId}</if>
            <if test="sourceType != null  and sourceType != ''"> and source_type = #{sourceType}</if>
            <if test="industryType != null  and industryType != ''"> and industry_type = #{industryType}</if>
            <if test="customerLevel != null  and customerLevel != ''"> and customer_level = #{customerLevel}</if>
            <if test="cooperationStatus != null "> and cooperation_status = #{cooperationStatus}</if>
            <if test="region != null  and region != ''"> and region = #{region}</if>
            <if test="description != null  and description != ''"> and description = #{description}</if>
            <if test="assignUserId != null "> and assign_user_id = #{assignUserId}</if>
            <if test="assignDeptId != null "> and assign_dept_id = #{assignDeptId}</if>
            <if test="attachmentIds != null  and attachmentIds != ''"> and attachment_ids = #{attachmentIds}</if>
            <if test="createTime != null "> and create_time = #{createTime}</if>
            <if test="updateTime != null "> and update_time = #{updateTime}</if>
        </where>
    </select>
    
    <select id="selectMkCustomersByCustomerId" parameterType="Long" resultMap="MkCustomersMkCustomerContactResult">
        select customer_id, customer_name, customer_short_name, lead_id, source_type, industry_type, customer_level, cooperation_status, scale_type, region, address, legal_person, registered_capital, establish_date, website, phone, email, tax_no, description, assign_user_id, assign_dept_id, attachment_ids, del_flag, create_by, create_time, update_by, update_time, reserved1, reserved2, reserved3
