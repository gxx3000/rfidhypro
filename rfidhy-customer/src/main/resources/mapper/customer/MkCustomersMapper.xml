    <select id="selectMkCustomerContactList" resultMap="MkCustomerContactResult">
        select contact_id, customer_id, contact_name, position, phone, email, is_primary, gender, birthday, wechat, remark, del_flag, create_by, create_time, update_by, update_time
        from mk_customer_contact
